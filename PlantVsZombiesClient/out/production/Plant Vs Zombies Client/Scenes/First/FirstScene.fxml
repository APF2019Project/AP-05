<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="Scenes.First.FirstSceneController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <ImageView fitHeight="489.0" fitWidth="863.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../Files/background.jpeg"/>
                    </image>
                </ImageView>
                <Button fx:id="loginButton" layoutX="331.0" layoutY="338.0" mnemonicParsing="false"
                        onMouseClicked="#onLoginButtonMouseClicked" prefHeight="55.0" prefWidth="201.0" text="Login">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Label fx:id="title" layoutX="301.0" layoutY="14.0" text="Plant&#10;Vs&#10;Zombies"
                       textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="Ubuntu Bold" size="65.0"/>
                    </font>
                </Label>
                <Button fx:id="createAccountButton" layoutX="332.0" layoutY="268.0" mnemonicParsing="false"
                        onMouseClicked="#onCreateAccountButtonMouseClicked" prefHeight="55.0" prefWidth="201.0"
                        text="Create Account">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button fx:id="leaderboardButton" layoutX="331.0" layoutY="407.0" mnemonicParsing="false"
                        onMouseClicked="#onLeaderboardButtonMouseClicked" prefHeight="55.0" prefWidth="201.0"
                        text="Leaderboard">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</VBox>
