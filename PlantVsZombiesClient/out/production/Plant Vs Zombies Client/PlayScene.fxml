<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="PlaySceneController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <ImageView fitHeight="489.0" fitWidth="863.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Files/background.jpeg"/>
                    </image>
                </ImageView>
                <Button fx:id="waterButton" layoutX="439.0" layoutY="290.0" mnemonicParsing="false"
                        onMouseClicked="#onWaterButtonMouseClicked" prefHeight="55.0" prefWidth="201.0" text="Water">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Label fx:id="title" layoutX="301.0" layoutY="14.0" text="Plant&#10;Vs&#10;Zombies"
                       textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="Ubuntu Bold" size="65.0"/>
                    </font>
                </Label>
                <Button fx:id="dayButton" layoutX="224.0" layoutY="290.0" mnemonicParsing="false"
                        onMouseClicked="#onDayButtonMouseClicked" prefHeight="55.0" prefWidth="201.0" text="Day">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button fx:id="pvpButton" layoutX="332.0" layoutY="417.0" mnemonicParsing="false"
                        onMouseClicked="#onPVPButtonMouseClicked" prefHeight="55.0" prefWidth="201.0" text="2 Player">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button fx:id="zombieButton" layoutX="440.0" layoutY="352.0" mnemonicParsing="false"
                        onMouseClicked="#onZombieButtonMouseClicked" prefHeight="55.0" prefWidth="201.0" text="Zombie">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button fx:id="railButton" layoutX="225.0" layoutY="352.0" mnemonicParsing="false"
                        onMouseClicked="#onRailButtonMouseClicked" prefHeight="55.0" prefWidth="201.0" text="Rail">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#onBackButtonMouseClicked" opacity="0.88">
                    <graphic>
                        <ImageView fitHeight="43.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Files/back.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </AnchorPane>
    </children>
</VBox>
