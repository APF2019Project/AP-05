<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="Scenes.Leaderboard.MemberInLeaderboardListController">
    <left>
        <ImageView fx:id="imageView" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <image>
                <Image url="@../../../../Profile Pictures/profile5.png"/>
            </image>
        </ImageView>
    </left>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <center>
        <Label fx:id="usernameLabel" text="Username" wrapText="true" BorderPane.alignment="CENTER">
            <font>
                <Font size="22.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" top="10.0"/>
            </BorderPane.margin>
        </Label>
    </center>
    <right>
        <VBox alignment="CENTER" prefHeight="59.0" prefWidth="59.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="killCountLabel" text="N">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Label>
                <Label text="kills">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>
