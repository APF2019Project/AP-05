<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainAnchorPane" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="Scenes.Games.PlantOnRailModePlayer.PlantOnRailModePlayerSceneController">
    <children>
        <ImageView fx:id="backgroundImageView" fitHeight="650.0" fitWidth="1024.0" pickOnBounds="true" smooth="false">
            <image>
                <Image url="@../../../Files/dayBackgroundCutSixLines.jpg"/>
            </image>
        </ImageView>
        <ImageView fx:id="selectImageView" fitHeight="650.0" fitWidth="1024.0" opacity="0.0" pickOnBounds="true"
                   smooth="false">
            <image>
                <Image url="@../../../Files/selectPic.png"/>
            </image>
        </ImageView>
        <ScrollPane layoutX="14.0" layoutY="35.0" prefHeight="554.0" prefWidth="82.0">
            <content>
                <VBox fx:id="handBox"/>
            </content>
        </ScrollPane>
        <AnchorPane fx:id="gamePane" layoutX="242.0" layoutY="44.0" maxHeight="-Infinity" maxWidth="-Infinity"
                    minHeight="-Infinity" minWidth="-Infinity" prefHeight="554.0" prefWidth="757.0"/>
        <Button fx:id="backButton" layoutX="948.0" layoutY="11.0" mnemonicParsing="false"
                onMouseClicked="#onBackButtonMouseClicked">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Files/exitIcon.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <VBox layoutX="170.0" layoutY="5.0" prefHeight="109.0" prefWidth="61.0">
            <children>
                <ImageView fitHeight="108.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Files/iconfinder_knifetoolcuttercuttingtool_4211465.png"/>
                    </image>
                </ImageView>
                <Pane prefHeight="33.0" prefWidth="185.0">
                    <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ffffffb2" height="33.0" stroke="BLACK"
                                   strokeType="INSIDE" width="68.0"/>
                        <Label fx:id="sunLabel" alignment="CENTER" layoutX="2.0" prefHeight="33.0" prefWidth="68.0"
                               text="sunCount" textAlignment="CENTER">
                            <font>
                                <Font size="22.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
        </VBox>
    </children>
</AnchorPane>
